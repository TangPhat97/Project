############ MY CODE
# initial start
import random
from game_data import data
from art import logo,vs
from replit import clear


def format_name(account):
  """" Create the name of account and return its in name,descrip,country """
  name = account["name"]
  des = account["description"]
  country = account["country"]
  return f"{name}, a {des}, {country}"



# Create the VerSus between 2 people and it is only contains value of name,decription and country
def game():
  score = 0
  is_continous=True
  account_a = random.choice(data)
  account_b = random.choice(data) 
  while is_continous:
    account_a = account_b # KEY WORD :REPEATEABLE B-> A
    account_b = random.choice(data)
    while account_a == account_b:
      account_b = random.choice(data)
    print(f"Compare A: {format_name(account_a)}")
    print(vs)
    print(f"Against B: {format_name(account_b)}")

    # who have more followers???
    ## compare followers between 2 people
    choice = input("Who has more followers? Type 'A' or 'B': ").lower()
    follower_a = account_a["follower_count"]
    follower_b = account_b["follower_count"]
    
    clear()
    print(logo)
    

    if choice == "a" and follower_a > follower_b:
      score += 1
      print(f"You're right! Current score: {score}")
    elif choice == "b" and follower_b > follower_a:
      score += 1
      print(f"You're right! Current score: {score}")
    elif choice == "a" and follower_a < follower_b:
      is_continous = False
      print (f"Sorry, that's wrong. Final score: {score}")
    elif choice == "b" and follower_a > follower_b :
      is_continous = False
      print (f"Sorry, that's wrong. Final score: {score}")
    else:
      is_continous = False
      print (f"Sorry, that's wrong. Final score: {score}")
game()






